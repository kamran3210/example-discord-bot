{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "warnOnUnsupportedTypeScriptVersion": false
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": [
            "error",
            "always",
            {
                "omitLastInOneLineBlock": false
            }
        ],
        "semi-style": [
            "error",
            "last"
        ],
        "no-extra-semi": [
            "error"
        ],
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ]
    }
}