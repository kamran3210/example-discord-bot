{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build",
    "newLine": "lf",
    "sourceMap": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/typings"
  ],
  "exclude": [
    "node_modules",
    "./build"
  ],
  "ts-node": {
    "files": true
  }
}